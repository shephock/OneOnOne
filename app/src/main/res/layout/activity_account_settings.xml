<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syberkeep.oneonone.AccountSettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user_settings"
        android:src="@drawable/default_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/display_name_settings"
        android:text="Display Name"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_user_settings"
        android:layout_margin="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/status_settings"
        android:text="Hi! This is my status"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/display_name_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/change_status_btn_settings"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:backgroundTint="@color/colorAccent"
        android:text="CHANGE STATUS"
        android:textColor="@color/white"
        android:padding="18dp"
        android:layout_centerHorizontal="true"
        android:paddingStart="20dp"
        android:layout_alignParentBottom="true"
        android:paddingEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/change_image_btn_settings"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:backgroundTint="@color/white"
        android:text="CHANGE IMAGE"
        android:textColor="@color/grey_900"
        android:padding="18dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/change_status_btn_settings"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>