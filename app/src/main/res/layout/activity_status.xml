<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syberkeep.oneonone.StatusActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_status"
        layout="@layout/toolbar_layout" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_status"
        android:layout_below="@id/toolbar_status"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:singleLine="true"
            android:hint="Status here..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/update_status_btn"
        android:text="Update Status"
        android:layout_below="@id/text_input_layout_status"
        android:layout_alignParentEnd="true"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>