<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syberkeep.oneonone.StartActivity">

    <TextView
        android:id="@+id/text_view"
        android:text="Welcome to One On One!"
        android:textSize="24sp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_sign_up"
        android:textSize="20sp"
        android:text="Create an account"
        android:layout_below="@id/text_view"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:padding="20dp"
        android:layout_margin="20dp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_sign_in"
        android:textSize="20sp"
        android:text="Sign In"
        android:layout_below="@id/btn_sign_up"
        android:textAllCaps="false"
        android:textColor="@color/grey_900"
        android:padding="20dp"
        android:backgroundTint="#fcfcfc"
        android:layout_marginTop="0dp"
        android:layout_marginStart="@dimen/margin_larger"
        android:layout_marginEnd="@dimen/margin_larger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
